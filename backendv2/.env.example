# Application Settings
# ---------------------
# Defines the environment: development, testing, or production
NODE_ENV=development

# Port the server will listen on
PORT=5000

# API route prefix
API_PREFIX=/api

# Database Settings
# -----------------
# SQLite connection URL
DATABASE_URL="file:./dev.db"

# Authentication Settings
# -----------------------
# Secret keys for JWT tokens - CHANGE THESE IN PRODUCTION!
# You can generate strong secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=your_jwt_access_secret_key_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production

# JWT token expiration times
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
# -------------
# Window size in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Logging
# -------
# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# CORS Settings
# -------------
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# Mistral AI
# ----------
# API key for Mistral AI
MISTRAL_API_KEY=your_mistral_api_key_here